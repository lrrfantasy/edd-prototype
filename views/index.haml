.modal.add-monitor
  .dialog
    %header
      %h3 Add Monitor
      %span.close &times;
    .body
      %form
        %div
          %label Service Type:
          %select.type
            %option URL
            %option DB
            %option REST
            %option SOAP
            %option Message Queue
            %option Custom
        %div
          %label Group:
          %select
            %option Virtual NPR
        %div
          %label Title:
          %input{:type => 'text'}
        %div
          %label Description:
          %textarea
        .monitor-section.add-url
          %div
            %label URL:
            %input{:type => 'url'}
        .monitor-section.add-db
          %div
            %label Database Type:
            %input{:type => 'text'}
          %div
            %label Database URL:
            %input{:type => 'url'}
        .monitor-section.add-rest
          %div
            %label REST URL:
            %input{:type => 'url'}
    %footer
      %button.submit Add

.modal.add-group
